{
  "name": "Get Page Content",
  "version": "1.0",
  "manifest_version": 2,
  "description": "A simple Chrome extension to get the content of the current page and display it in a new window",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Get Page Content"
  },
  "web_accessible_resources": [
    "index.css",
    "index.html"
  ],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
